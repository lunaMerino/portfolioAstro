---
import skillsData from "../data/data-en.json";
const { skills } = skillsData;
---

<section class="my-12">
  <h2 class="text-3xl font-bold text-indigo-600 text-center mb-8">Skills</h2>
  <div class="flex flex-wrap justify-center gap-4 max-w-4xl mx-auto">
    {skills.map((skill) => (
      <div class="bg-indigo-100 text-indigo-800 font-medium px-4 py-2 rounded-full shadow-md hover:bg-indigo-200 transition">
        {skill}
      </div>
    ))}
  </div>
</section>
