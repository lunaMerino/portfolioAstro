---
import educationData from "../data/data-en.json";
const { education } = educationData;
---

<section class="my-12">
  <h2 class="text-3xl font-bold text-indigo-600 text-center mb-8">Education</h2>
  <div class="flex flex-col space-y-6 max-w-3xl mx-auto">
    {education.map((item) => (
      <div class="bg-gray-100 p-6 rounded-lg shadow-md hover:shadow-lg transition">
        <h3 class="text-xl font-semibold text-gray-800">{item.degree}</h3>
        <p class="text-gray-600">{item.institution}</p>
        <span class="text-sm text-gray-500">{item.year}</span>
      </div>
    ))}
  </div>
</section>
