---
import referencesData from "../data/data-en.json";
const { references } = referencesData;
---

<section class="my-12">
  <h2 class="text-3xl font-bold text-indigo-600 text-center mb-8">References</h2>
  <div class="flex flex-row justify-between space-y-6 max-w-3xl mx-auto">
    {references.map((ref) => (
      <div class="bg-gray-100 p-6 rounded-lg shadow-md hover:shadow-lg transition">
        <h3 class="text-xl font-semibold text-gray-800">{ref.name}</h3>
        <p class="text-gray-600">{ref.relation}</p>
        <a href={`mailto:${ref.contact}`} class="text-indigo-600 hover:underline">
          {ref.contact}
        </a>
      </div>
    ))}
  </div>
</section>
